# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{json,yml,yaml,toml}]
indent_size = 2

[*.{html,css}]
indent_size = 2 # I'm unsure about this one

[*.{js,jsx,ts,tsx}]
indent_size = 2 # I'm unsure about this one
quote_type = single

[*.md]
trim_trailing_whitespace = false

[*.sh]
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf
